<%= simple_form_for @proponent, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
  <%= f.input :full_name %>
  <%= f.input :email %>
  <%= f.input :birth %>
  <%= f.input :salary %>
  <%= f.input :discount, disabled: true %>
  <%= f.input :salary_band, disabled: true %>
  <%= f.simple_fields_for :address do |a| %>
    <%= a.input :zip_code %>
    <%= a.input :number %>
    <%= a.input :complement %>
    <%= a.input :neighborhood %>
    <%= a.input :city %>
    <%= a.input :uf %>
  <% end %>
  <%= f.simple_fields_for :phones do |p| %>
    <%= p.input :type,
      collection: [['CelularPhone', 'Celular'],['ComercialPhone', 'Comercial']],
      label_method: :second,
      value_method: :first,
      selected: 'Celular' %>
    <%= p.input :number %>
  <% end %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

