<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light">Proponentes</h1>
      <p class="lead text-muted">
        <table class="table">
          <thead>
            <tr>
              <th><%= Proponent.human_attribute_name(:full_name) %></th>
              <th><%= Proponent.human_attribute_name(:salary) %></th>
              <th><%= Proponent.human_attribute_name(:net_salary) %></th>
              <th>Controles</th>
            </tr>
          </thead>
          <tbody>
            <% @proponents.each do |proponent| %>
              <tr>
                <th><%= proponent.full_name %></th>
                <th><%= proponent.salary.format %></th>
                <th><%= proponent.net_salary.format %></th>
                <th>
                  <%= link_to 'edit', edit_proponent_url(proponent) %>
                </th>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="container pagination justify-content-center">
          <%= paginate @proponents, theme: 'bootstrap-5' %>
        </div>
      </p>
      <p>
        <%= link_to "Adicionar Proponente", new_proponent_url, class: "btn btn-primary my-2"  %>
      </p>
      <h2>Relat√≥rio das Faixas Salariais</h2>
      <div class="justify-content-center">
        <canvas id="proponents_chart" data-labels="<%= @chart.keys %>" data-data="<%= @chart.values %>"></canvas>
      </div>
    </div>
  </div>
</section>
